{
  // aka.ms/tsconfig
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,

    // Environment
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "typeRoots": [
      // "types",
      "./node_modules/@types",
      "../shared/types"
    ],
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true, // Also enables allowSyntheticDefaultImports

    // Output
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "removeComments": true,
    "newLine": "lf",

    // Type Safety
    "strict": true,
    "noImplicitAny": true,
    // "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,

    // Behaviour/Performance
    "incremental": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "paths": {
        "#db/*": ["./db/*.ts"]
    }
  },
  "include": [
    "db",
    "src",
    "types"
  ]
}
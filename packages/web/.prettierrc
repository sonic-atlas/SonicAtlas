{
  "useTabs": false,
  "tabWidth": 4,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "svelteAllowShorthand": true,
        "svelteSortOrder": "options-scripts-markup-styles"
      }
    },
    {
      "files": ["*.json", "*.html", "*.css"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
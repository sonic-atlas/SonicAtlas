<Page
    x:Class="gamebar.Widget1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:gamebar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}">

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Width="250" Margin="10">
    <Border Background="{ThemeResource SystemControlAcrylicWindowBrush}" CornerRadius="16" Padding="10">
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Spacing="0">
        <Border Width="150" Height="150" CornerRadius="12">
          <Image x:Name="AlbumArt" Stretch="UniformToFill" />
        </Border>

        <StackPanel Margin="0,10,0,10">
          <TextBlock x:Name="SongTitle" Text="Song Title"
                     FontSize="16" FontWeight="SemiBold"
                     TextAlignment="Center" Foreground="White"
                     TextWrapping="WrapWholeWords" />
          <TextBlock x:Name="Artist" Text="Artist Name"
                     FontSize="14" Foreground="#B3FFFFFF"
                     TextAlignment="Center" />
        </StackPanel>

        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="6"
                     Foreground="#1DB954" Background="#33FFFFFF"
                     Margin="0,0,0,10" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
          <Button x:Name="PrevButton" Width="40" Height="40"
                  Content="A" FontSize="18"
                  Background="Transparent" Foreground="White"
                  BorderBrush="Transparent" Click="PrevButton_Click" />
          <Button x:Name="PlayPauseButton" Width="40" Height="40"
            Content="B" FontSize="18"
            Background="Transparent" Foreground="White"
            BorderBrush="Transparent" Click="PlayPauseButton_Click" />
          <Button x:Name="NextButton" Width="40" Height="40"
            Content="C" FontSize="18"
            Background="Transparent" Foreground="White"
            BorderBrush="Transparent" Click="NextButton_Click" />
        </StackPanel>
      </StackPanel>
    </Border>
  </StackPanel>
</Page>

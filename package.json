{
  "name": "sonic-atlas",
  "version": "0.2.1",
  "description": "Open-source music streaming for self-hosting",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/web",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w packages/web\" \"npm run dev -w packages/backend\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "start": "npm run dev",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:push": "npm run db:push --workspace=packages/backend",
    "check": "npm run check --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
